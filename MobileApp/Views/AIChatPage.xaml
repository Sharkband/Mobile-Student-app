<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="MobileApp.Views.AIChatPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="AI Quiz Assistant">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- Header -->
        <Border Grid.Row="0" BackgroundColor="{AppThemeBinding Light=#F8F9FA, Dark=#343A40}"
                Padding="16,12">
            <StackLayout Orientation="Horizontal" Spacing="12">
                <Label Text="ðŸ¤–" FontSize="24" VerticalOptions="Center"/>
                <StackLayout VerticalOptions="Center" Spacing="2">
                    <Label Text="AI Quiz Assistant" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light=#212529, Dark=#F8F9FA}"/>
                    <Label Text="Ask me to create quiz questions for you!"
                           FontSize="12"
                           TextColor="{AppThemeBinding Light=#6C757D, Dark=#ADB5BD}"/>
                </StackLayout>
                <Button Text="Clear" 
                        Command="{Binding ClearChatCommand}"
                        BackgroundColor="Transparent"
                        TextColor="{AppThemeBinding Light=#007BFF, Dark=#66B3FF}"
                        HorizontalOptions="EndAndExpand"/>
            </StackLayout>
        </Border>

        <!-- Chat Messages -->
        <ScrollView Grid.Row="1" x:Name="ChatScrollView" Padding="16">
            <CollectionView ItemsSource="{Binding ChatMessages}"
                           x:Name="ChatCollectionView">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="0,8">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Message Content -->
                            <Border Grid.Row="0"
                                   BackgroundColor="{Binding Role, Converter={StaticResource MessageBackgroundConverter}}"
                                   Stroke="{Binding Role, Converter={StaticResource MessageBorderConverter}}"
                                   StrokeThickness="1"
                                   Padding="12,8"
                                   Margin="{Binding Role, Converter={StaticResource MessageMarginConverter}}">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="12"/>
                                </Border.StrokeShape>

                                <StackLayout Spacing="4">
                                    <Label Text="{Binding Role, Converter={StaticResource RoleDisplayConverter}}"
                                           FontSize="12"
                                           FontAttributes="Bold"
                                           TextColor="{Binding Role, Converter={StaticResource MessageTextColorConverter}}"/>
                                    <Label Text="{Binding Content}"
                                           TextColor="{Binding Role, Converter={StaticResource MessageTextColorConverter}}"
                                           FontSize="14"
                                           LineBreakMode="WordWrap"/>
                                </StackLayout>
                            </Border>

                            <!-- Timestamp -->
                            <Label Grid.Row="1"
                                   Text="{Binding Timestamp, StringFormat='{0:HH:mm}'}"
                                   FontSize="10"
                                   TextColor="{AppThemeBinding Light=#6C757D, Dark=#ADB5BD}"
                                   HorizontalOptions="{Binding Role, Converter={StaticResource TimestampAlignmentConverter}}"
                                   Margin="{Binding Role, Converter={StaticResource TimestampMarginConverter}}"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>

        <!-- Loading Indicator -->
        <StackLayout Grid.Row="1" 
                    IsVisible="{Binding IsLoading}"
                    VerticalOptions="End"
                    HorizontalOptions="Start"
                    Margin="16,0,16,16">
            <Border BackgroundColor="{AppThemeBinding Light=#F8F9FA, Dark=#495057}"
                   Stroke="{AppThemeBinding Light=#DEE2E6, Dark=#495057}"
                   StrokeThickness="1"
                   Padding="12,8">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12"/>
                </Border.StrokeShape>
                <StackLayout Orientation="Horizontal" Spacing="8">
                    <ActivityIndicator IsRunning="{Binding IsLoading}" 
                                     Color="{AppThemeBinding Light=#007BFF, Dark=#66B3FF}"
                                     WidthRequest="16"
                                     HeightRequest="16"/>
                    <Label Text="AI is thinking..." 
                           FontSize="12"
                           TextColor="{AppThemeBinding Light=#6C757D, Dark=#ADB5BD}"
                           VerticalOptions="Center"/>
                </StackLayout>
            </Border>
        </StackLayout>

        <!-- Input Area -->
        <Border Grid.Row="2" 
               BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#212529}"
               Stroke="{AppThemeBinding Light=#DEE2E6, Dark=#495057}"
               Padding="16">

            <StackLayout Spacing="12">
                <!-- Quick Action Buttons -->
                <ScrollView Orientation="Horizontal" HeightRequest="40">
                    <StackLayout Orientation="Horizontal" Spacing="8">
                        <Button Text="Math Questions" 
                               Command="{Binding GenerateQuizCommand}"
                               CommandParameter="mathematics"
                               BackgroundColor="{AppThemeBinding Light=#E3F2FD, Dark=#1E3A8A}"
                               TextColor="{AppThemeBinding Light=#1976D2, Dark=#93C5FD}"
                               FontSize="12"
                               Padding="12,6"
                               CornerRadius="16"/>
                        <Button Text="Science Quiz" 
                               Command="{Binding GenerateQuizCommand}"
                               CommandParameter="science"
                               BackgroundColor="{AppThemeBinding Light=#E8F5E8, Dark=#166534}"
                               TextColor="{AppThemeBinding Light=#388E3C, Dark=#86EFAC}"
                               FontSize="12"
                               Padding="12,6"
                               CornerRadius="16"/>
                        <Button Text="History Questions" 
                               Command="{Binding GenerateQuizCommand}"
                               CommandParameter="history"
                               BackgroundColor="{AppThemeBinding Light=#FFF3E0, Dark=#9A3412}"
                               TextColor="{AppThemeBinding Light=#F57C00, Dark=#FED7AA}"
                               FontSize="12"
                               Padding="12,6"
                               CornerRadius="16"/>
                    </StackLayout>
                </ScrollView>

                <!-- Message Input -->
                <Grid ColumnDefinitions="*,Auto">
                    <Border Grid.Column="0"
                           BackgroundColor="{AppThemeBinding Light=#F8F9FA, Dark=#343A40}"
                           Stroke="{AppThemeBinding Light=#CED4DA, Dark=#495057}"
                           StrokeThickness="1"
                           Padding="12,8">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="20"/>
                        </Border.StrokeShape>

                        <Entry Text="{Binding CurrentMessage}"
                              Placeholder="Ask me to create quiz questions... e.g., 'Create 5 questions about biology'"
                              BackgroundColor="Transparent"
                              TextColor="{AppThemeBinding Light=#212529, Dark=#F8F9FA}"
                              PlaceholderColor="{AppThemeBinding Light=#6C757D, Dark=#ADB5BD}"
                              FontSize="14"/>
                    </Border>

                    <Button Grid.Column="1"
                           Text="Send"
                           Command="{Binding SendMessageCommand}"
                           BackgroundColor="{AppThemeBinding Light=#007BFF, Dark=#0D6EFD}"
                           TextColor="White"
                           FontSize="14"
                           FontAttributes="Bold"
                           CornerRadius="20"
                           Margin="8,0,0,0"
                           Padding="16,8"
                           IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}"/>
                </Grid>
            </StackLayout>
        </Border>
    </Grid>
</ContentPage>