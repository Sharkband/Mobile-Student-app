<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="MobileApp.Views.AIChatPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="AI Quiz Assistant">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- Header -->
        <StackLayout Grid.Row="0" 
                     BackgroundColor="#006F8D" 
                     Padding="16">
            <StackLayout Orientation="Horizontal" Spacing="12">
                <Label Text="ðŸ¤–" FontSize="24" VerticalOptions="Center"/>
                <StackLayout VerticalOptions="Center">
                    <Label Text="AI Quiz Assistant" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="White"/>
                    <Label Text="Ask me to create quiz questions!"
                           FontSize="12"
                           TextColor="White"/>
                </StackLayout>
                <Button Text="Clear" 
                        Command="{Binding ClearChatCommand}"
                        BackgroundColor="Transparent"
                        TextColor="White"
                        HorizontalOptions="EndAndExpand"/>
            </StackLayout>
        </StackLayout>

        <!-- Chat Messages -->
        <ScrollView Grid.Row="1" Padding="16">
            <CollectionView ItemsSource="{Binding ChatMessages}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Padding="0,8">
                            <Frame BackgroundColor="LightBlue" 
                                   Padding="12" 
                                   CornerRadius="15"
                                   HasShadow="False">
                                <StackLayout>
                                    <Label Text="{Binding Role}" 
                                           FontSize="12" 
                                           FontAttributes="Bold"/>
                                    <Label Text="{Binding Content}" 
                                           FontSize="14"/>
                                    <Label Text="{Binding Timestamp, StringFormat='{0:HH:mm}'}" 
                                           FontSize="10" 
                                           TextColor="Gray"
                                           HorizontalOptions="End"/>
                                </StackLayout>
                            </Frame>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>

        <!-- Loading Indicators -->
        <StackLayout Grid.Row="1" 
                     IsVisible="{Binding IsLoading}"
                     VerticalOptions="End" 
                     Margin="16"
                     BackgroundColor="Yellow" 
                     Padding="12" 
                     Orientation="Horizontal">
            <ActivityIndicator IsRunning="{Binding IsLoading}" Color="Blue"/>
            <Label Text="AI is thinking..." VerticalOptions="Center"/>
        </StackLayout>

        <StackLayout Grid.Row="1" 
                     IsVisible="{Binding IsGeneratingQuiz}"
                     VerticalOptions="End" 
                     Margin="16,16,16,60"
                     BackgroundColor="Orange" 
                     Padding="12" 
                     Orientation="Horizontal">
            <ActivityIndicator IsRunning="{Binding IsGeneratingQuiz}" Color="Red"/>
            <Label Text="Generating quiz questions..." VerticalOptions="Center"/>
        </StackLayout>

        <!-- Input Area -->
        <StackLayout Grid.Row="2" Padding="16" Spacing="12">
            <!-- Quick Buttons -->
            <ScrollView Orientation="Horizontal">
                <StackLayout Orientation="Horizontal" Spacing="8">
                    <Button Text="Math" 
                            Command="{Binding GenerateQuizCommand}"
                            CommandParameter="mathematics"
                            BackgroundColor="LightBlue"/>
                    <Button Text="Science" 
                            Command="{Binding GenerateQuizCommand}"
                            CommandParameter="science"
                            BackgroundColor="LightGreen"/>
                    <Button Text="History" 
                            Command="{Binding GenerateQuizCommand}"
                            CommandParameter="history"
                            BackgroundColor="LightCoral"/>
                </StackLayout>
            </ScrollView>

            <!-- Message Input -->
            <Grid ColumnDefinitions="*,Auto">
                <Entry Grid.Column="0"
                       Text="{Binding CurrentMessage}"
                       Placeholder="Ask me to create quiz questions..."
                       BackgroundColor="LightGray"/>

                <Button Grid.Column="1"
                        Text="Send"
                        Command="{Binding SendMessageCommand}"
                        BackgroundColor="#006F8D"
                        TextColor="White"
                        Margin="8,0,0,0"/>
            </Grid>
        </StackLayout>
    </Grid>
</ContentPage>