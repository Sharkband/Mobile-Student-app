<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:MobileApp.ViewModels"
             x:Class="MobileApp.Views.MainPage"
             Title="LearnHub"
             BackgroundColor="#f8f9ff"
             x:DataType="viewmodel:MainViewModel">

    <ScrollView>
        
        

        <StackLayout Spacing="20" Padding="20">

            <StackLayout Spacing="15">
                <Label Text="Create Quizzes" 
               FontSize="20" 
               FontAttributes="Bold" 
               TextColor="#2d3748" 
               Margin="0,10,0,5" />

                <!-- Quiz Button -->
                <Frame BackgroundColor="#006F8D" 
                    CornerRadius="15" 
                    HasShadow="True" 
                    Padding="0">
                    <Button Text="Create a Quiz" 
                        FontSize="18" 
                        FontAttributes="Bold" 
                        TextColor="White" 
                        BackgroundColor="Transparent" 
                        HeightRequest="60"
                        Command="{Binding NavigateToAiCommand}" />
                </Frame>

            </StackLayout>

            <!-- Header Section -->
            <Frame BackgroundColor="White" 
                   CornerRadius="15" 
                   HasShadow="True"
                   Padding="20">
                <StackLayout>
                    <Label Text="{Binding WelcomeMessage}" 
                           FontSize="16" 
                           TextColor="#666" />
                    <Label Text="{Binding MotivationalMessage}" 
                           FontSize="24" 
                           FontAttributes="Bold" 
                           TextColor="#2d3748" />

                    <!-- Progress Bar -->
                    <StackLayout Orientation="Horizontal" Spacing="10" Margin="0,15,0,0">
                        <Label Text="Average Accuracy" 
                               FontSize="14" 
                               TextColor="#666" 
                               VerticalOptions="Center" />
                        <ProgressBar Progress="{Binding DailyProgress}" 
                                     ProgressColor="#006F8D" 
                                     BackgroundColor="#e2e8f0" 
                                     HeightRequest="8" 
                                     HorizontalOptions="FillAndExpand" />
                        <Label Text="{Binding DailyProgressText}" 
                               FontSize="14" 
                               FontAttributes="Bold" 
                               TextColor="#4299e1" 
                               VerticalOptions="Center" />
                    </StackLayout>
                </StackLayout>
            </Frame>

            <!-- Quick Stats -->
            <Grid ColumnDefinitions="*,*,*" ColumnSpacing="10">
                <Frame Grid.Column="0" 
                       BackgroundColor="White" 
                       CornerRadius="12" 
                       HasShadow="True" 
                       Padding="15">
                    <StackLayout>
                        <Label Text="🏆" 
                               FontSize="24" 
                               HorizontalOptions="Center" />
                        <Label Text="{Binding CurrentStreak}" 
                               FontSize="20" 
                               FontAttributes="Bold" 
                               TextColor="#2d3748" 
                               HorizontalOptions="Center" />
                        <Label Text="Streak" 
                               FontSize="12" 
                               TextColor="#666" 
                               HorizontalOptions="Center" />
                    </StackLayout>
                </Frame>

                <Frame Grid.Column="1" 
                       BackgroundColor="White" 
                       CornerRadius="12" 
                       HasShadow="True" 
                       Padding="15">
                    <StackLayout>
                        <Label Text="⭐" 
                               FontSize="24" 
                               HorizontalOptions="Center" />
                        <Label Text="{Binding TotalPoints}" 
                               FontSize="20" 
                               FontAttributes="Bold" 
                               TextColor="#2d3748" 
                               HorizontalOptions="Center" />
                        <Label Text="Points" 
                               FontSize="12" 
                               TextColor="#666" 
                               HorizontalOptions="Center" />
                    </StackLayout>
                </Frame>

                <Frame Grid.Column="2" 
                       BackgroundColor="White" 
                       CornerRadius="12" 
                       HasShadow="True" 
                       Padding="15">
                    <StackLayout>
                        <Label Text="📚" 
                               FontSize="24" 
                               HorizontalOptions="Center" />
                        <Label Text="{Binding TotalSubjects}" 
                               FontSize="20" 
                               FontAttributes="Bold" 
                               TextColor="#2d3748" 
                               HorizontalOptions="Center" />
                        <Label Text="Quizzes" 
                               FontSize="12" 
                               TextColor="#666" 
                               HorizontalOptions="Center" />
                    </StackLayout>
                </Frame>
            </Grid>

            <!-- Main Action Buttons -->
            <StackLayout Spacing="15">
                <Label Text="Study Now" 
                       FontSize="20" 
                       FontAttributes="Bold" 
                       TextColor="#2d3748" 
                       Margin="0,10,0,5" />

                <!-- Quiz Button -->
                <Frame BackgroundColor="#006F8D" 
                       CornerRadius="15" 
                       HasShadow="True" 
                       Padding="0">
                    <Button Text="🧠 Take a Quiz" 
                            FontSize="18" 
                            FontAttributes="Bold" 
                            TextColor="White" 
                            BackgroundColor="Transparent" 
                            HeightRequest="60"
                            Command="{Binding NavigateToQuizCommand}" />
                </Frame>

                <!-- Flashcards Button -->
                <Frame BackgroundColor="#48bb78" 
                       CornerRadius="15" 
                       HasShadow="True" 
                       Padding="0">
                    <Button Text="🃏 Study Flashcards" 
                            FontSize="18" 
                            FontAttributes="Bold" 
                            TextColor="White" 
                            BackgroundColor="Transparent" 
                            HeightRequest="60"
                            Command="{Binding NavigateToFlashcardsCommand}" />
                </Frame>
            </StackLayout>

            <!-- Recent Activity -->
            <StackLayout Spacing="10">
                <Label Text="Last Quiz" 
                       FontSize="20" 
                       FontAttributes="Bold" 
                       TextColor="#2d3748" 
                       Margin="0,10,0,5" />

                <!-- Subject Cards -->
                <Frame BackgroundColor="White" 
                       CornerRadius="12" 
                       HasShadow="True" 
                       Padding="15">
                    <Grid ColumnDefinitions="60,*,Auto" ColumnSpacing="15">
                        <Frame Grid.Column="0" 
                               BackgroundColor="#e6fffa" 
                               CornerRadius="30" 
                               HeightRequest="50" 
                               WidthRequest="50" 
                               HasShadow="False" 
                               Padding="0" 
                               VerticalOptions="Center">
                            <Label Text="🧮" 
                                   FontSize="24" 
                                   HorizontalOptions="Center" 
                                   VerticalOptions="Center" />
                        </Frame>

                        <StackLayout Grid.Column="1" VerticalOptions="Center">
                            <Label Text="{Binding LastQuizResult}" 
                                   FontSize="16" 
                                   FontAttributes="Bold" 
                                   TextColor="#2d3748" />
                            <Label Text="{Binding LastQuizScore}" 
                                   FontSize="13" 
                                   TextColor="#666" />
                        </StackLayout>

                        <Label Grid.Column="2" 
                               Text="{Binding LastQuizAccuracy}" 
                               FontSize="16" 
                               FontAttributes="Bold" 
                               TextColor="#48bb78" 
                               VerticalOptions="Center" />
                    </Grid>
                </Frame>

                
            </StackLayout>

            <!-- Bottom Navigation Placeholder -->
            <!--
            <StackLayout Margin="0,20,0,0">
                <Label Text="📱 Add a TabBar or Shell navigation for full app navigation" 
                       FontSize="12" 
                       TextColor="#a0aec0" 
                       HorizontalOptions="Center" 
                       FontAttributes="Italic" />
            </StackLayout>-->

        </StackLayout>
    </ScrollView>
</ContentPage>
