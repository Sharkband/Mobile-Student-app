<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MobileApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MobileApp.Views"
    Title="MobileApp">

    <ShellContent Title="Home" ContentTemplate="{DataTemplate views:MainPage}" Route="MainPage" />

    <ShellContent Title="Quiz" Route="quiz" ContentTemplate="{DataTemplate views:QuizPage}" />

    <ShellContent Title="Flashcards" Route="flashcards" ContentTemplate="{DataTemplate views:FlashcardPage}" />

    <ShellContent Title="AI Quiz Creator" Route="AIQuizCreator" ContentTemplate="{DataTemplate views:AIChatPage}" />
    
    <ShellContent Title="Settings" Route="settings" ContentTemplate="{DataTemplate views:SettingsPage}" />

</Shell>
